<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.LoginActivity">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="71dp"
        android:layout_height="79dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/login_title"
        android:background="@drawable/zampa" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editMailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_title"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:drawableLeft="@drawable/ic_baseline_local_post_office_24"
        android:drawablePadding="3dp"
        android:ems="20"
        android:hint="@string/e_mail"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/green_500"
        android:textColorHint="@color/green_500"
        android:textSize="20sp"
        tools:ignore="MissingClass" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPswLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMailLogin"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="2dp"
        android:ems="20"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/green_500"
        android:textColorHint="@color/green_500"
        android:textSize="20sp"
        tools:ignore="MissingClass" />


    <View
        android:id="@+id/dividerPetDetail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/editPswLogin"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="25dp"
        android:background="@color/green_500" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerPetDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="80dp"
        android:elevation="2dp"
        android:text="@string/accedi"
        android:textColor="@color/green_500"
        app:backgroundTint="@color/white"
        app:cornerRadius="20dp"
        app:elevation="4dp"
        tools:ignore="MissingClass" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:text="@string/password_dimenticata"
        android:textAlignment="center"
        tools:ignore="MissingClass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registrazione_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:elevation="2dp"
        android:text="@string/registrazione"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:elevation="4dp"
        tools:ignore="MissingClass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrazione_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/light_green"
        android:elevation="2dp"
        android:text="@string/non_ora"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:elevation="4dp"
        tools:ignore="MissingClass" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/versioneAppLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        android:text="@string/versione_1_0_0_demo"
        android:textStyle="italic"
        app:backgroundTint="@color/white"
        app:cornerRadius="20dp"
        app:elevation="4dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sfondo_cane_gatto"></ImageView>


</RelativeLayout>
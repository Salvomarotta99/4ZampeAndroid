<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CategorieFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/categoriaCV1"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="216dp"
        android:backgroundTint="@color/green_500"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDog"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Vai"
                app:backgroundTint="@color/green_700" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cani"
            android:textAlignment="center"
            android:textColor="#DC020202"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/categoriaCV2"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="207dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="@color/green_500"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Vai"
                app:backgroundTint="@color/green_700" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gatti"
            android:textAlignment="center"
            android:textColor="#DC020202"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/categoriaCV3"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="217dp"
        android:backgroundTint="@color/green_500"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDogCat"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Vai"
                app:backgroundTint="@color/green_700" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cani e Gatti"
            android:textAlignment="center"
            android:textColor="#DC020202"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="11dp"
        android:text="Indovina la Razza "
        android:textAlignment="center"
        android:textColor="#D9000000"
        android:textSize="36sp" />


</RelativeLayout>